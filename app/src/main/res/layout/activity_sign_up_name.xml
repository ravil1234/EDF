<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#feffff"
    tools:context="OTP_Activity"
    >
    <ImageView
        android:id="@+id/img_sign"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signn_up">
    </ImageView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/textview1"
        android:layout_below="@+id/img_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="Tell us your details"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="#000"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="we will use your details for future reference"
            android:textSize="16dp"
            >
        </TextView>
    </LinearLayout>
    <EditText
        android:id="@+id/name_user"
        android:layout_below="@id/textview1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="321dp"
        android:hint="Enter your Name"
        android:padding="10dp"
        android:textColor="#000"
        android:background="@drawable/buttonotp_border"
        android:layout_height="44dp"></EditText>
    <EditText
        android:id="@+id/clg_user"
        android:layout_below="@id/name_user"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="321dp"
        android:hint="Enter your College/School"
        android:padding="10dp"
        android:textColor="#000"
        android:background="@drawable/buttonotp_border"
        android:layout_height="44dp"></EditText>

    <Button
        android:id="@+id/proceed_btn"
        android:layout_below="@id/clg_user"
        android:enabled="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="321dp"
        android:text="Proceed"
        android:textColor="#ffffff"
        android:background="@drawable/button_border"
        android:layout_height="44dp"></Button>
</RelativeLayout>