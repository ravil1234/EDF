<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#feffff"
    tools:context=".PhoneAuthActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/bacground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/background_logo">
    </ImageView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bacground"
            android:id="@+id/lineartxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                tools:ignore="MissingConstraints"
                android:text="Give us your"
                android:textStyle="bold"
                android:textSize="26dp"
                android:textColor="#000"
                >
            </TextView>
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="8dp"
                android:text="mobile number"
                android:textStyle="bold"
                android:textSize="26dp"
                android:textColor="#000"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="8dp"
                android:text="we need your mobile number to link"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to the account"
                android:textSize="16dp"
                >
            </TextView>
        </LinearLayout>
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/lineartxt"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            app:ccp_textColor="#000"
            app:ccp_textSize="16sp"
            android:id="@+id/ccp"
            app:ccp_keyboardAutoPopOnSearch="true"
            app:ccp_arrowSize="30dp"
            app:ccp_hideNameCode="true"
            app:ccp_showFlag="false"
            app:ccp_dialogTextColor="#000"
            app:ccp_backgroundColor="#feffff"/>
        <ImageView
            android:id="@+id/cross_tic_img"
            android:visibility="invisible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/ccp"
            android:layout_marginLeft="220dp"
            android:src="@drawable/cross_imgphone"
            android:layout_below="@id/lineartxt"></ImageView>
        <EditText
            android:layout_below="@id/lineartxt"
            android:layout_toRightOf="@id/ccp"
            android:id="@+id/phone_number"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittext_border"
            android:hint="Enter Mobile Number"
            android:inputType="phone"
            android:paddingLeft="19dp"
            android:paddingRight="13dp"
            android:layout_marginLeft="10dp">
        </EditText>
        <Button
            android:id="@+id/proceed_btn"
            android:enabled="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="321dp"
            android:text="Proceed"
            android:layout_below="@id/phone_number"
            android:textColor="#ffffff"
            android:background="@drawable/button_border"
            android:layout_height="44dp"></Button>
    </RelativeLayout>