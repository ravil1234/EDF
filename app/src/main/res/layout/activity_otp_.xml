<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#feffff"
    tools:context=".OTP_Activity"
    >
    <ImageView
        android:id="@+id/wall_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/wall_img">
    </ImageView>
    <LinearLayout
        android:layout_below="@id/wall_img"
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="We Have sent you"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="#000"
            >
        </TextView>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="an OTP"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="#000"
            >
        </TextView>
        <TextView
            android:id="@+id/text_view_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="enter the 6 digit OTP sent on mobile"
            android:textSize="14sp"
            >
        </TextView>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to proceed"
            android:textSize="16sp"
            >
        </TextView>
    </LinearLayout>
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_marginLeft="17dp"
        android:textColor="#000"
        app:box_margin="7dp"
        app:height="40dp"
        app:hide_otp="false"
        app:length="6"
        app:otp=""
        app:otp_box_background="@drawable/button_border"
        app:otp_box_background_active="@drawable/buttonotp_border"
        app:otp_box_background_inactive="@drawable/edittext_border"
        app:otp_text_size="20dp"
        app:bar_active_color="#000"
        app:bar_enabled="false"
        app:bar_error_color="@color/red"
        app:bar_height="1.5dp"
        app:bar_inactive_color="@color/white"
        app:bar_margin_bottom="0dp"
        app:bar_margin_left="2dp"
        app:bar_margin_right="2dp"
        app:bar_success_color="#0f0"
        app:width="40dp">
    </in.aabhasjindal.otptextview.OtpTextView>
    <TextView
        android:id="@+id/otp_send_invalid"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:text="OTP sent"
        android:textSize="10dp"
        android:textColor="#21D729"
        android:layout_below="@id/otp_view">
    </TextView>
    <Button
        android:enabled="false"
        android:id="@+id/verify_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_width="321dp"
        android:text="Verify"
        android:layout_below="@id/otp_view"
        android:textColor="#ffffff"
        android:background="@drawable/button_border"
        android:layout_height="44dp"></Button>

    <TextView
        android:id="@+id/resend_code"
        android:layout_below="@id/verify_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="321dp"
        android:text="Resend Verification Code 00:30"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#DCDDDE"
        android:background="@drawable/edittext_border"
        android:layout_height="44dp"></TextView>
    <TextView
        android:visibility="invisible"
        android:id="@+id/resend_code_enabled"
        android:layout_below="@id/verify_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="321dp"
        android:text="Resend Verification Code"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#F6A129"
        android:background="@drawable/buttonotp_border"
        android:layout_height="44dp"></TextView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerInParent="true">
    </ProgressBar>
</RelativeLayout>